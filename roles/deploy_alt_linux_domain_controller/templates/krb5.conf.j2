includedir /etc/krb5.conf.d/

[logging]
# default = FILE:/var/log/krb5libs.log
# kdc = FILE:/var/log/krb5kdc.log
# admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 dns_lookup_kdc = true
 dns_lookup_realm = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true
 rdns = false
 default_realm = {{ daldc_domain_name | upper }}
# default_ccache_name = KEYRING:persistent:%{uid}

[realms]
# EXAMPLE.COM = {
#  default_domain = example.com
# }
{{ daldc_domain_name | upper }} = {
 default_domain = {{ daldc_domain_name | lower }}
}

[domain_realm]
# .example.com = EXAMPLE.COM
# example.com = EXAMPLE.COM
 {{ inventory_hostname.split('.')[0] }} = {{ daldc_domain_name | upper }}
 .{{ daldc_domain_name | lower }} = {{ daldc_domain_name | upper }}
 {{ daldc_domain_name | lower }} = {{ daldc_domain_name | upper }}
